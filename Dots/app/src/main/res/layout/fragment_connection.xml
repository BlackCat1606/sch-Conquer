<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="darrenretinambpcrystalwell.Fragments.ConnectionFragment"
    android:background="@drawable/background">



    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/targetLocation"
            android:text="@string/targetLocation"
            android:layout_marginTop="-50dp"
            android:textColor="#ffffff"
            android:layout_gravity="center"/>

    <ImageView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:padding="5dp"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/currentLocation"
            android:src="@drawable/currentlocation"
            android:background="@android:color/transparent"
            android:layout_gravity="center"/>
<!--current location-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_ip_address"
        android:text="@string/My_IP_Address"
        android:textColor="#ffffff"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"/>

    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/moon"
            android:id="@+id/moon"
            android:layout_gravity="center"
            android:layout_marginBottom="80dp"/>
    <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/astrosit"
            android:id="@+id/astrosit"
            android:layout_gravity="center"
            android:layout_marginBottom="85dp"
            android:layout_marginLeft="15dp"/>
    <ImageView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:padding="5dp"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/rules"
            android:src="@drawable/location"
            android:background="@android:color/transparent"
            android:layout_gravity="center"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ipAddress"
            android:layout_marginBottom="110dp"
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal|bottom"/>

    <ImageButton
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:padding="5dp"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/start_multi_player_game_button"
            android:src="@drawable/go"
            android:background="@android:color/transparent"
            android:layout_gravity="center_horizontal|bottom"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start_server_button"
            android:text="Server"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start_client_button"
            android:text="Client"/>

        </LinearLayout>



</FrameLayout>
