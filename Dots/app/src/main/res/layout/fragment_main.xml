<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    android:layout_marginTop="0dp"
    tools:context="darrenretinambpcrystalwell.Fragments.MainFragment"
    android:id="@+id/root_layout"
    android:background="@drawable/backgroundtwo"
    android:animateLayoutChanges="true">

    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/imageView3"
            android:src="@drawable/earth"
            android:layout_gravity="center"/>


    <ImageView
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/imageView"
            android:src="@drawable/conquer"
            android:layout_gravity="center"/>


    <ImageButton
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="140dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/start_multi_player_button"
            android:background="@drawable/button_main_ptwo"
        android:layout_gravity="center_horizontal|bottom"/>


    <ImageButton
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="180dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/start_single_player_button"
            android:background="@drawable/button_main_pone"
            android:layout_gravity="center_horizontal|bottom"/>

    <ImageButton
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="100dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/rules"
            android:src="@drawable/rules"
            android:background="@android:color/transparent"
            android:layout_gravity="center_horizontal|bottom"/>

    <fr.castorflex.android.smoothprogressbar.SmoothProgressBar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        app:spb_sections_count="4"
        app:spb_color="#FF0000"
        app:spb_speed="2.0"
        app:spb_stroke_width="4dp"
        app:spb_stroke_separator_length="4dp"
        app:spb_reversed="false"
        app:spb_mirror_mode="false"
        app:spb_progressiveStart_activated="false"
        app:spb_progressiveStart_speed="1.5"
        app:spb_progressiveStop_speed="3.4"
        android:id="@+id/loading_bar"
        />

</FrameLayout>
